<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout_parentView_profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_title_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Create Profile"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_username_profile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:endIconMode="none"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp">
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextview_username_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="@string/signUpUsername"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_department_profile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextview_department_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/department"
            android:inputType="none"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/button_cancel_profile"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Cancel"
            android:textSize="14dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.App.Button.ContainedButton"/>

        <Button
            android:id="@+id/button_proceed_profile"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Proceed"
            android:textSize="14dp"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_horizontal"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24_white"
            style="@style/Widget.App.Button.ContainedButton"/>


    </LinearLayout>





</LinearLayout>